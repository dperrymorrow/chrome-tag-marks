%head
  %title Chrome Bookmark MGR
  %link{:rel => "stylesheet", :media => "all", :href => "css/app.css"}

%body
  .container-fluid
    #search-container
    #content
      / content gets put here with jst

  %script#search-view{:type => "text/jst"}
    %form.form-search
      %input#search-field.input-medium.search-query{:type => "text"}

  %script#bookmark-index{:type => "text/jst"}
    %h2 {{title}}
    {{#bookmarks}}
    .row-fluid
      .span6
        %a.url{:href => "{{{url}}}"}
          {{title}}
      .span3
        {{dateAdded}}
      .span3
        %a{:href => "#bookmark/destroy{{id}}"}
          %i.icon-trash
    {{/bookmarks}}

  / libraries
  %script{:type => "text/javascript", :src => "js/libs/jquery-1.9.1.min.js"}
  %script{:type => "text/javascript", :src => "js/libs/bootstrap.min.js"}
  %script{:type => "text/javascript", :src => "js/libs/underscore.min.js"}
  %script{:type => "text/javascript", :src => "js/libs/backbone.min.js"}
  %script{:type => "text/javascript", :src => "js/libs/mustache.min.js"}

  / custom scripts
  %script{:type => "text/javascript", :src => "js/router.js"}
  %script{:type => "text/javascript", :src => "js/models/bookmark_model.js"}
  %script{:type => "text/javascript", :src => "js/views/index_view.js"}
  %script{:type => "text/javascript", :src => "js/views/search_view.js"}
  %script{:type => "text/javascript", :src => "js/app.js"}